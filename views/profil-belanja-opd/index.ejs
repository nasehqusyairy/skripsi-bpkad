<%
  layout('layouts/admin')
  const  listOPD  = pagination.results
%>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="mt-4">Profil OPD</h1>

      <div class="card">
        <div class="card-body">
            <form>
            <div class="mb-3">
                <div class="input-group">
                    <input type="text" class="form-control" id="search" name="search" value="<%=search %>" placeholder="Cari OPD...">
                    <button class="btn btn-primary">Cari</button>
                </div>
            </div>
            </form>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>#</th>
                <th>Kode</th>
                <th>Nama</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% const startIndex = (pagination.currentPage - 1) * pagination.perPage; %>
              <% listOPD.forEach((opd, i) => { %>
              <tr>
                <td><%= startIndex + i + 1 %></td>
                <td><%= opd.kode_org %></td>
                <td><%= opd.nama_org %></td>
                <td></td>
              </tr>
              <% }) %>
            </tbody>

          </table>

          <% if (pagination.total > pagination.perPage) { %>
          <nav>
            <ul class="pagination justify-content-end">
              <!-- Tombol Previous -->
              <li class="page-item <%= pagination.previousPage ? '' : 'disabled' %>">
                <a class="page-link" href="?page=<%= pagination.previousPage %>">Previous</a>
              </li>

              <!-- Nomor Halaman -->
              <% for (let i = 1; i <= pagination.lastPage; i++) { %>
              <li class="page-item <%= pagination.currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
              </li>
              <% } %>

              <!-- Tombol Next -->
              <li class="page-item <%= pagination.hasMore ? '' : 'disabled' %>">
                <a class="page-link" href="?page=<%= pagination.nextPage %>">Next</a>
              </li>
            </ul>
          </nav>
          <% } %>

        </div>
      </div>
    </div>
  </div>
</div>