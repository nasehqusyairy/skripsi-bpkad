<% layout('layouts/default'); %>

<div class="row justify-content-center">
  <div class="col-12 col-md-6 col-lg-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title mb-3">Login</h5>

        <!-- Alert saat gagal login -->
        <% if (messages.error) { %>

        <div class="alert alert-danger">
          <%= messages.error[0] %>
        </div>

        <% } %>

        <form action="/auth/login/?next=<%=url().search.next%>" method="POST">
          <%- csrfField() %>

          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="<%=old('email')%>" required>

          </div>

          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
          </div>

          <div class="mb-3">
            <label for="tahun_buku" class="form-label">Tahun Buku</label>
            <select name="tahun_buku" id="tahun_buku" class="form-select">
              <option value="">Pilih tahun buku...</option>
              <% tahun_buku.forEach(tahun=> { %>
              <option value="<%= tahun %>" <%= tahun == old('tahun_buku') ? 'selected' : ''%>><%= tahun %></option>
              <% }) %>
            </select>
          </div>

          <button type="submit" class="btn btn-primary">Login</button>

          <!-- register link -->
          <p class="mt-3">Don't have an account? <a href="/auth/register">Register</a></p>

        </form>
      </div>
    </div>
  </div>
</div>