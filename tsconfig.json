{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./build",
    "target": "es2020",
    "rootDir": "./src",
    "noImplicitAny": false,
    "removeComments": true,
  },
  "include": [
    "src/**/*"
  ]
}